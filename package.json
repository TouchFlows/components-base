{
  "name": "buzzcasting-common",
  "private": true,
  "version": "0.0.8",
  "description": "Common components used by BuzzCasting",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/buzzcasting-common/buzzcasting-common.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/TouchFlows/buzzcasting-common.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "NODE_ENV=production run-s build:tailwind build:stencil",
    "start": "NODE_ENV=development npm-run-all -p dev:*",    
    "dev:tailwind": "tailwindcss -i src/all.pcss -o src/global/tailwind.css --watch",
    "dev:stencil": "stencil build --dev --watch --serve",
    "build:stencil": "stencil build --docs",
    "build:tailwind": "tailwindcss -i src/all.pcss -o src/global/tailwind.css --minify",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "lint": "eslint src/**/*{.ts,.tsx}"
  },
  "dependencies": {
    "@stencil/core": "2.20.0",
    "d3": "^7.7.0",
    "dayjs": "^1.11.7",
    "echarts": "^5.4.0",
    "qrcode-generator": "^1.4.4",
    "topojson-client": "^3.1.0"
  },
  "lint-staged": {
    "*{.ts,.tsx,.js}": [
      "eslint --fix"
    ],
    "*{.css,.pcss,.md,.json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@emotion/css": "^11.10.5",
    "@stencil/eslint-plugin": "^0.4.0",
    "@types/jest": "^27.0.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.4.5",
    "jest-cli": "^27.4.5",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "puppeteer": "^19.4.0",
    "tailwindcss": "^3.2.4"
  },
  "license": ""
}
